---
import Layout from '../layouts/Layout.astro';
import Footer from '../components/footer.astro'
import {first,second,third,fourth,fifth} from "../scripts/words";
import '../styles/global.css'

function getRandomIndex(array) {
  return Math.floor(Math.random() * array.length);
}

const randomFirstWordIndex = getRandomIndex(first);
const randomSecondWordIndex = getRandomIndex(second);
const randomThirdWordIndex = getRandomIndex(third);
const randomFourthWordIndex = getRandomIndex(fourth);
const randomFifthWordIndex = getRandomIndex(fifth);


const selectedFirstWord = first[randomFirstWordIndex];
const selectedSecondWord = second[randomSecondWordIndex];
const selectedThirdWord = third[randomThirdWordIndex];
const selectedFourthWord = second[randomFourthWordIndex];
const selectedFifthWord = second[randomFifthWordIndex];
const selectedWords = `${selectedFirstWord} ${selectedSecondWord} ${selectedThirdWord} ${selectedFourthWord} ${selectedFifthWord}`



---

<Layout title="My Anime Title is Magically Random!">
	<main>
		
		<h1 class="main-font instructions">My Anime Title is Magically <span class="text-gradient">Random!</span></h1>
		
    <ul class="link-card-grid">
		<span id="random" >{selectedWords}</span>
		<section>
		
		<button class="c-button" id="generate-title">
  <span class="c-main">
    <span class="c-ico"><span class="c-blur"></span> <span class="ico-text">+</span></span>
    generate title
  </span>
</button>
		</section>
		</ul>
	</main>
<Footer/>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
		height: 100vh;
	}

	body {
	background: url(/aqua.jpg) no-repeat center fixed;
  -webkit-background-size: cover;
  background-size: cover;
  -moz-background-size: cover;
}
	
	
	h1 {
		font-size: 4rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-bottom: 1em;
	}
	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
	

 #generate-title {

	background:#600dcd;
	color: aliceblue;
 }

 #random {
	font-size: 3rem;
	font-family: "OtakuRantBold";
 }

	.link-card-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
		gap: 2rem;
		padding: 0;
		margin-top: 13rem;
	}
</style>
